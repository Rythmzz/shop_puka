<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/relativeLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="88dp"
                android:layout_height="111dp"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_logo"
                >
            </ImageView>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tm_hotpromote"
                />

        </FrameLayout>

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:gravity="left"
                android:id="@+id/textViewNameProduct"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:text="Tên "
                android:textColor="#222222"
                android:textSize="14sp"

                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewPriceProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="192.000.000 VNĐ"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/draw_goods"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/textViewSalePriceProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/teal_700"
                    android:textStyle="italic|bold" />

                <LinearLayout
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/btnAdd"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#676767"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/numberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="#676767"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/btnSub"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#676767"
                        android:textSize="15sp"/>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayoutMore"
        android:visibility="gone"
        android:layout_width="180dp"
        android:layout_height="210dp">
        <ImageView
            android:id="@+id/imageViewMore"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tm_viewall"
            android:background="@color/white"
            android:padding="16dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem thêm"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:layout_gravity="center"
            />

    </FrameLayout>



</RelativeLayout>