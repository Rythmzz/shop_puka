<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/relativeLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/imageViewProduct"
                android:scaleType="fitCenter"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@color/mainColor"
                android:padding="16dp"
                >
            </ImageView>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/tm_hotpromote"
                />

        </FrameLayout>

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:gravity="center"
                android:id="@+id/textViewNameProduct"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laptop gaming G9"
                android:textStyle="bold"
                android:textColor="@color/mainColor"

                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewPriceProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="11.900.000VNĐ"
                    android:textColor="@color/teal_700"
                    android:textStyle="italic|bold" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/textViewSalePriceProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/teal_700"
                    android:textStyle="italic|bold" />

                <LinearLayout
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btnAdd"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/circle2_item"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>
                    <TextView
                        android:id="@+id/numberCount"
                        android:padding="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainColor"
                        android:text="1"
                        android:textSize="25dp"
                        />
                    <ImageView
                        android:id="@+id/btnSub"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/circle2_item"
                        android:src="@drawable/tm_minimize"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayoutMore"
        android:visibility="gone"
        android:layout_width="180dp"
        android:layout_height="210dp">
        <ImageView
            android:id="@+id/imageViewMore"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tm_viewall"
            android:background="@color/white"
            android:padding="16dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem thêm"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:layout_gravity="center"
            />

    </FrameLayout>



</RelativeLayout>