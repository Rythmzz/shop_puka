<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/relativeLayout">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/pk_shape_2"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="220dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_gravity="center"
                app:riv_corner_radius="8dp"
                android:id="@+id/imageViewProduct"
                android:scaleType="fitCenter"
                android:layout_width="100dp"
                android:layout_height="100dp"

                >
            </com.makeramen.roundedimageview.RoundedImageView>
            <ImageView

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tm_hotpromote"
                />

        </FrameLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/textViewNameProduct"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:maxLines="1"
            android:text="Laptop gaming G9"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:textSize="15dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/textViewPriceProduct"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:text="11.900.000VNĐ"
                   android:textColor="@color/mainColor"
                   />
               <TextView
                   android:id="@+id/textViewSalePriceProduct"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:text=""
                   android:textColor="@color/mainColor"
                    />
           </LinearLayout>
           <View
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_weight="1"/>
           <ImageView
               android:id="@+id/add_cart"
               android:layout_gravity="center"
               android:src="@drawable/ic_pk_cart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


       </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutMore"
        android:visibility="gone"
        android:layout_width="180dp"
        android:layout_height="210dp">
        <ImageView
            android:id="@+id/imageViewMore"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tm_viewall"
            android:background="@color/white"
            android:padding="16dp"
            >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem thêm"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:layout_gravity="center"
        />

    </FrameLayout>



</RelativeLayout>