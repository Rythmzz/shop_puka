<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/relativeLayout"
    >
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="210dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/imageViewProduct"
                android:scaleType="fitCenter"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:padding="16dp"
                >
            </ImageView>
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/tm_bestseller"
                />

        </FrameLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/textViewNameProduct"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laptop gaming G9"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:textSize="15dp"
            />
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/textViewPriceProduct"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="11.900.000VNĐ"
               android:textColor="@color/teal_700"
               android:textStyle="italic|bold" />
           <TextView
               android:id="@+id/textViewSalePriceProduct"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text=""
               android:textColor="@color/teal_700"
               android:textStyle="italic|bold" />

       </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayoutMore"
        android:visibility="gone"
        android:layout_width="180dp"
        android:layout_height="210dp">
        <ImageView
            android:id="@+id/imageViewMore"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tm_viewall"
            android:background="@color/white"
            android:padding="16dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem thêm"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:layout_gravity="center"
            />

    </FrameLayout>

</RelativeLayout>